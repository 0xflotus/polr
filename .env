# Your app's name (shown on interface)
APP_NAME=Polr

# Protocol to access your app. e.g https://
APP_PROTOCOL=http://

# Your app's external address (e.g example.com)
APP_ADDRESS=localhost:5000

# Your app's bootstrap stylesheet
